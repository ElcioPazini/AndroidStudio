<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pais"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:textSize="@dimen/tamanho" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/largura"
        android:layout_height="150dp"
        android:baselineAligned="false"
        android:contentDescription="@string/pais"
        app:srcCompat="@drawable/pais" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/largura"
        android:layout_height="170dp"
        android:contentDescription="@string/comida"
        app:srcCompat="@drawable/comida" />

    <TextView
        android:id="@+id/comida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comida"
        android:textAlignment="center"
        android:textSize="@dimen/tamanho" />

</LinearLayout>